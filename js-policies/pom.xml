<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>js-policies</artifactId>
    <groupId>com.keycloak</groupId>
    <packaging>jar</packaging>
    <version>1.0.0</version>
    <name>Keycloak Quickstarts: JS Policies</name>
    <description>JS Policies used by Authorization Services Quickstarts</description>

    <build>
        <finalName>${project.artifactId}</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>

    <!-- Java 15 or later does not contain any javascript engine by default. The profiles below help to add nashorn script engine
         to server classpath to have script providers working when Keycloak running on Java 15 or later -->
    <profiles>
        <profile>
            <id>keycloak-quarkus-distribution-with-java15-or-later</id>
            <activation>
                <jdk>[15,)</jdk>
            </activation>

            <dependencies>
                <dependency>
                    <groupId>org.openjdk.nashorn</groupId>
                    <artifactId>nashorn-core</artifactId>
                    <version>15.4</version>
                </dependency>
            </dependencies>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>3.3.0</version>
                        <executions>
                            <execution>
                                <id>copy-dependencies-quarkus</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy-dependencies</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/keycloak-server-copy/providers</outputDirectory>
                                    <includeArtifactIds>nashorn-core,asm,asm-util,asm-commons</includeArtifactIds>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

    </profiles>

</project>
